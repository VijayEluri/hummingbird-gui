<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
	   					   http://www.springframework.org/schema/osgi 
	   					   http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd">

	<!--
		Register the CamelParameterProviderServiceFactory class as a provider of the CamelParameterProviders 
		to satisfy the service. Spring DM will pick this up and carry out the necessary steps.
	-->
	<osgi:service id="camelParameterProviderService"
				  ref="camelParameterProviderServiceFactory"
				  interface="org.hbird.rcpgui.parameterprovider.ParameterProvider">
	</osgi:service>

</beans>
