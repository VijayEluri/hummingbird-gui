<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd 
						http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- 
		Create a JMS endpoint for use by the camel providers in creating routes.
		Camel OSGi will scan the spring context for beans.
	 -->
	<!-- Transport beans -->
	<bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="tcp://localhost:61616" />
	</bean>

	<bean id="pooledConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory">
		<property name="maxConnections" value="8" />
		<property name="maximumActive" value="500" />
		<property name="connectionFactory" ref="jmsConnectionFactory" />
	</bean>

	<bean id="jmsConfig" class="org.apache.camel.component.jms.JmsConfiguration">
		<property name="connectionFactory" ref="pooledConnectionFactory" />
		<property name="transacted" value="false" />
		<property name="concurrentConsumers" value="10" />
	</bean>

	<bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
		<property name="configuration" ref="jmsConfig" />
	</bean>
	
	<osgi:list id="newParameterListenerServiceList"
			   interface="org.hbird.rcpgui.parameterlistener.interfaces.NewParameterListener"
			   cardinality="0..N">
	</osgi:list>
	
	<bean id="parameterDistributer" class="org.hbird.rcpgui.camelparameterprovider.ParameterDistributer">
		<property name="newParameterListenerServices" ref="newParameterListenerServiceList"></property>
	</bean>
	
	<camel:camelContext>
		<camel:route id="liveTmIn">
			<camel:from uri="activemq:parameterGroups"></camel:from>
			<camel:to uri="parameterDistributer"></camel:to>
		</camel:route>
	</camel:camelContext>

</beans>
