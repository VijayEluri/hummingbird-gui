<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="PacketBroker"
            id="PacketBrokerViewer">
      </category>
      <view
            name="PacketBrokerView"
            icon="icons/sample.gif"
            category="PacketBrokerViewer"
            class="com.logica.hummingbird.packetbrokerviewer.views.PacketBrokerView"
            id="com.logica.hummingbird.packetbrokerviewer.views.PacketBrokerView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               closeable="true"
               id="com.logica.hummingbird.packetbrokerviewer.views.PacketBrokerView"
               moveable="true"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               showTitle="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.logica.hummingbird.packetbrokerviewer.perspectives.PacketBrokerPerspective"
            icon="icons/sample.gif"
            id="com.logica.hummingbird.packetbrokerviewer.PacketBrokerViewer.perspectives.packetbrokerperspectives"
            name="Packet Broker">
      </perspective>
   </extension>

</plugin>
