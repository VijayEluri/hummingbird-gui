<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Space System Editor"
            extensions="xml"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="com.logica.hummingbird.simulatorplugin.editors.SpaceSystemXmlEditor"
            id="com.logica.hummingbird.simulatorplugin.editors.SpaceSystemXmlEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Simulator"
            id="com.logica.hummingbird.SimulatorPlugin">
      </category>
      <view
            category="com.logica.hummingbird.SimulatorPlugin"
            class="com.logica.hummingbird.simulatorplugin.views.SpaceSystemParametersView"
            icon="icons/sample.gif"
            id="com.logica.hummingbird.simulatorplugin.views.SpaceSystemParametersView"
            name="Space System Parameters"
            restorable="true">
      </view>
      <view
            category="com.logica.hummingbird.SimulatorPlugin"
            class="com.logica.hummingbird.simulatorplugin.views.SpaceSystemPacketsView"
            icon="icons/sample.gif"
            id="com.logica.hummingbird.simulatorplugin.views.SpaceSystemPacketsView"
            name="Space System Packets"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.logica.hummingbird.simulatorplugin.views.SpaceSystemParametersView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.logica.hummingbird.simulatorplugin.persepctives.SimulatorPerspectiveFactory"
            id="com.logica.hummingbird.SimulatorPlugin.perspective"
            name="SimulatorPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.logica.hummingbird.SimulatorPlugin.menus.simulatorMenu"
               label="Simulator"
               mnemonic="M">
            <command
                  commandId="com.logica.hummingbird.SimulatorPlugin.commands.openSsm"
                  id="com.logica.hummingbird.SimulatorPlugin.menus.simulatorMenu"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.logica.hummingbird.SimulatorPlugin.toolbars.simulatorToolbar">
            <command
                  commandId="com.logica.hummingbird.SimulatorPlugin.commands.openSsm"
                  icon="icons/sample.gif"
                  id="com.logica.hummingbird.SimulatorPlugin.toolbars.simulatorToolbar"
                  tooltip="Load a space system model into the simulator">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.logica.hummingbird.SimulatorPlugin.commands.openSsm"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.logica.hummingbird.SimulatorPlugin.commands.category"
            name="Simulator">
      </category>
      <command
            categoryId="com.logica.hummingbird.SimulatorPlugin.commands.category"
            id="com.logica.hummingbird.SimulatorPlugin.commands.openSsm"
            name="Open Space System Model">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.logica.hummingbird.simulatorplugin.handlers.OpenSsm"
            commandId="com.logica.hummingbird.SimulatorPlugin.commands.openSsm">
      </handler>
   </extension>

</plugin>
