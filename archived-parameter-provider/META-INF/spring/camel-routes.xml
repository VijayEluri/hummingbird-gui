<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd 
						http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<import resource="activemq.xml"/>
	<import resource="beans.xml"/>

	
	<camel:camelContext>
		<!-- Wire a JMS queue to the parameter archive retriever service. Any requests that hit the queue will be processes
			 by the archive retriever and returned on a temp queue created by camel -->
		<camel:route>
			<camel:from uri="activemq:requestArchivedParametersByQualifiedName"></camel:from>
			<camel:to uri="bean:configurableArchivedParameterProvider"></camel:to>
		</camel:route>
		
	</camel:camelContext>

</beans>
