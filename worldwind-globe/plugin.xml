<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.hbird.rcpgui.worldwind-globe.category.globe"
            class="org.hbird.rcpgui.worldwindglobe.views.MainGlobeView"
            icon="icons/world.png"
            id="org.hbird.rcpgui.worldwindglobe.views.MainGlobe"
            name="Orbit globe"
            restorable="true">
      </view>
      <category
            id="org.hbird.rcpgui.worldwind-globe.category.globe"
            name="Globe">
      </category>
   </extension>
      <extension
            point="org.eclipse.ui.perspectiveExtensions">
         <perspectiveExtension
               targetID="org.eclipse.jdt.ui.JavaPerspective">
            <view
                  id="org.hbird.rcpgui.worldwindglobe.views.MainGlobe"
                  minimized="false"
                  ratio="1"
                  relationship="right"
                  standalone="true"
                  visible="true">
            </view>
         </perspectiveExtension>
      </extension>
      <extension
            point="org.eclipse.ui.commands">
         <category
               id="org.hbird.rcpgui.worldwind-globe.commands.category"
               name="Sample Category">
         </category>
         <command
               categoryId="org.hbird.rcpgui.worldwind-globe.commands.category"
               id="org.hbird.rcpgui.worldwind-globe.commands.sampleCommand"
               name="Sample Command">
         </command>
      </extension>
      <extension
            point="org.eclipse.ui.handlers">
         <handler
               class="org.hbird.rcpgui.worldwindglobe.handlers.SampleHandler"
               commandId="org.hbird.rcpgui.worldwind-globe.commands.sampleCommand">
         </handler>
      </extension>
      <extension
            point="org.eclipse.ui.bindings">
      </extension>
      <extension
            point="org.eclipse.ui.menus">
         <menuContribution
               locationURI="menu:org.eclipse.ui.main.menu?after=additions">
            <menu
                  id="org.hbird.rcpgui.worldwind-globe.menus.sampleMenu"
                  label="Sample Menu"
                  mnemonic="M">
               <command
                     commandId="org.hbird.rcpgui.worldwind-globe.commands.sampleCommand"
                     id="org.hbird.rcpgui.worldwind-globe.menus.sampleCommand"
                     mnemonic="S">
               </command>
            </menu>
         </menuContribution>
         <menuContribution
               locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
            <toolbar
                  id="org.hbird.rcpgui.worldwind-globe.toolbars.sampleToolbar">
               <command
                     commandId="org.hbird.rcpgui.worldwind-globe.commands.sampleCommand"
                     icon="icons/sample.gif"
                     id="org.hbird.rcpgui.worldwind-globe.toolbars.sampleCommand"
                     tooltip="Say hello world">
               </command>
            </toolbar>
         </menuContribution>
      </extension>
      <extension
            point="org.eclipse.ui.commands">
      </extension>
</plugin>
