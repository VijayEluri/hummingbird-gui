<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="org.hbird.rcpgui.hummingbirdbaseapp.application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/transmit_blue.png">
         <run
               class="org.hbird.rcpgui.hummingbirdbaseapp.HummingbirdCoreApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.hbird.rcpgui.hummingbirdbaseapp.perspectives.McsHomePerspective"
            id="org.hbird.rcpgui.hummingbirdbaseapp.perspectives.McsHomePerspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.hbird.rcpgui.hummingbirdbaseapp.application"
            name="Hummingbird - Mission Control System">
         <property
               name="windowImages"
               value="icons/transmit_blue.png">
         </property>
         <property
               name="appName"
               value="Hummingbird - Mission Control System">
         </property>
         <property
               name="startupProgressRect"
               value="5,5,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="7,320,445,20">
         </property>
         <property
               name="aboutText"
               value="Hummingbird Mission Control System&#x0A;&#x0A;Mark Doyle - Johannes Klug - Gert Villemos">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?">
         <menu
               id="org.hbird.rcpgui.hummingbirdbaseapp.menus.file"
               label="%menu.label"
               mnemonic="%menu.mnemonic">
            <command
                  commandId="org.hbird.rcpgui.hummingbirdbaseapp.commands.exit"
                  label="%command.label"
                  mnemonic="%command.mnemonic"
                  style="push"
                  tooltip="%command.tooltip">
            </command>
         </menu>
         <menu
               id="org.hbird.rcpgui.hummingbirdbaseapp.menus.admin"
               label="Admin">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.hbird.rcpgui.hummingbirdbaseapp.commands.exit"
            name="%command.name">
      </command>
   </extension>

</plugin>
