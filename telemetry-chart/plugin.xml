<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Charting"
            id="org.hbird.rcpgui.telemetrychart.views.ChartView">
      </category>
      <view
            name="Chart View"
            icon="icons/sample.gif"
            category="org.hbird.rcpgui.telemetrychart.views.ChartView"
            class="org.eclipse.springframework.util.SpringExtensionFactory"
            id="org.hbird.rcpgui.telemetrychart.views.ChartView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.hbird.rcpgui.telemetrychart.editors.Chart"
            id="org.hbird.rcpgui.telemetrychart.editors.Chart"
            name="New telemetry chart">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.hbird.rcpgui.telemetrychart.commands.category"
            name="Plotting">
      </category>
      <command
            categoryId="org.hbird.rcpgui.telemetrychart.commands.category"
            id="org.hbird.rcpgui.telemetrychart.commands.newplot"
            name="New plot">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.hbird.rcpgui.telemetrychart.handlers.NewChartEditorHandler"
            commandId="org.hbird.rcpgui.telemetrychart.commands.newplot">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.hbird.rcpgui.telemetrychart.menus.sampleMenu"
               label="Plotting"
               mnemonic="P">
            <command
                  commandId="org.hbird.rcpgui.telemetrychart.commands.newplot"
                  id="org.hbird.rcpgui.telemetrychart.menus.sampleCommand"
                  mnemonic="N">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.hbird.rcpgui.telemetrychart.toolbars.sampleToolbar">
            <command
                  commandId="org.hbird.rcpgui.telemetrychart.commands.newplot"
                  icon="icons/sample.gif"
                  id="org.hbird.rcpgui.telemetrychart.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
