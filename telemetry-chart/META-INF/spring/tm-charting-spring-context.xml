<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   	xmlns:osgi="http://www.springframework.org/schema/osgi"
	   	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   	http://www.springframework.org/schema/beans/spring-beans.xsd 
	   					   	http://www.springframework.org/schema/osgi 
	   					   	http://www.springframework.org/schema/osgi/spring-osgi.xsd">
	
	<!-- Service for the Parameter model -->
	<osgi:reference id="archivedParameterRetrievalService" 
					interface="org.hbird.rcpgui.archivedparameterprovider.interfaces.ArchivedParameterProvider"
					cardinality="1..1">
	</osgi:reference>

	 <bean id="org.hbird.rcpgui.telemetrychart.bundleContext" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
   		<property name="targetClass">
   			<value>org.hbird.rcpgui.telemetrychart.Activator</value>
   		</property>
		<property name="targetMethod">
			<value>getContext</value>
		</property>
 	</bean>
 	
	<bean id="parameterModel" class="org.hbird.rcpgui.commons.model.CappedQueueParameterModel">
	</bean>
	
	<bean id="archivedParameterModel" class="org.hbird.rcpgui.commons.model.ArchivedParametersModel">
		<property name="archivedParameterRetrievalService" ref="archivedParameterRetrievalService"></property>
	</bean>
	
	<!-- Registers the live parameter model as a listener service. -->
	<osgi:service id="parameterListenerService"
				  interface="org.hbird.rcpgui.parameterlistener.serviceinterfaces.NewParameterListener"  
				  ref="parameterModel">
	</osgi:service>
	
	<!-- Grabs a space system publiser service. -->
	<osgi:reference id="sspRequesterService"
					interface="org.hbird.rcpgui.ssprequester.interfaces.SpaceSystemPublisherRequester"
					cardinality="1..1">
	</osgi:reference>

	<!-- Model representing the return from the publisher service. Used to show all parameters in the model -->
	<bean id="spaceSystemParametersModel" class="org.hbird.rcpgui.telemetrychart.model.SpaceSystemParameterModel">
		<property name="sspRequester" ref="sspRequesterService"></property>
	</bean>

	
	<bean id="org.hbird.rcpgui.telemetrychart.views.ChartView" 
		  class="org.hbird.rcpgui.telemetrychart.views.ChartView" 
		  scope="prototype">
		  <property name="spaceSystemParametersModel" ref="spaceSystemParametersModel"></property>
	</bean>
	
	<bean id="org.hbird.rcpgui.telemetrychart.editors.ArchivedChartEditorPart"
		  class="org.hbird.rcpgui.telemetrychart.editors.ArchivedChartEditorPart"
		  scope="prototype">
		  <property name="model" ref="archivedParameterModel"></property>
	</bean>

</beans>
